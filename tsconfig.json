{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ]
}